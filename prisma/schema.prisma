generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  f
  m
}

model Account {
  id         Int      @id @default(autoincrement())
  nama       String
  email      String   @unique
  gender     Gender
  password   String
  role       Int      @default(1)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model AccountComment {
  id               Int      @id @default(autoincrement())
  nama             String
  role             String
  email            String
  text             String
  account_story_id Int
  created_at       DateTime @default(now())

  // Relasi ke Story
  story Story @relation(fields: [account_story_id], references: [id], onDelete: Cascade)
}

model Story {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  role       Int
  story      String
  photos     String[]
  created_at DateTime @default(now())

  // Tambahkan relasi ke AccountComment
  comments AccountComment[] // One-to-Many relationship
}
